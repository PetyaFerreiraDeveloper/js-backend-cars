<main>
  <h1>Browser</h1>
  <form action="" method="">
    <input type="text" class="search" name="search" placeholder="Search..." />
    <input
      type="number"
      name="from"
      class="difficulty"
      placeholder="Price from..."
    />
    <span>-</span>
    <input
      type="number"
      name="to"
      class="difficulty"
      placeholder="Price to..."
    />
    <input type="submit" value="search" />
  </form>

  <div>
    {{#each cars}}
    {{> carPreview}}
    {{else}}
    <p>No cars in database. <a href="/create">Create the first listing!</a></p>
    {{/each}}
  </div>


</main>